<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>{{appTitle}}</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>

  <nav class="nav-bar">
    <div class="nav-bar-id">
      <img
        class="logo"
        src="https://res.cloudinary.com/dwgakctdp/image/upload/v1677155208/kiddoscare/Kiddo_sCare-Logo_efwifu.png"
        alt="kiddo's care logo"
      />
      <h3>Kiddo's Care Babysitting</h3>
    </div>
    <div>
      <ul class="nav justify-content-end">
        <li class="nav-item">
          <a class="nav-link" href="/">Homepage</a>
        </li>
        <h3> logged in: {{loggedin}}</h3>
        <h3> user: {{user}}</h3>

        {{#if loggedin}}
          <li class="nav-item">
            <a class="nav-link" href="/auth/logout">Logout</a>
          </li>
        {{else}}
          <li class="nav-item">
            <a class="nav-link" href="/auth/signup">Signup</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/auth/login">Login</a>
          </li>
        {{/if}}

        {{#unless user.babysitter}}
          <li class="nav-item">
            <a class="nav-link" href="/babysitters-list">Search babysitters</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/client">{{user.firstName}} profile</a>
          </li>
        {{else}}
          <li class="nav-item">
            <a class="nav-link" href="/babysitter">My profile</a>
          </li>
        {{/unless}}

      </ul>
    </div>

  </nav>

  <body>

    {{{body}}}

    <script src="/js/script.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>

  </body>

  <footer class="footer">
    <h3>Follow us</h3>
  </footer>

</html>